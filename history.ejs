<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diary History</title>
    <link rel="stylesheet" href="/main.css">
    <link rel="stylesheet" href="/styles.css"> <!-- Link to styles.css -->
</head>
<body>
    <h1>Diary History</h1>

    <% if (diaries.length > 0) { %>
        <% diaries.forEach(function(diary, index) { %>
            <div class="diary-container">
                <p class="diary-date">Posted on: <%= diary.date %></p>
                <p class="diary-content"><%= diary.content %></p>
                <form action="/delete-diary" method="POST" style="display: inline;">
                    <input type="hidden" name="index" value="<%= index %>">
                    <button type="submit" class="delete-button">Delete</button>
                </form>
            </div>
        <% }) %>
    <% } else { %>
        <p>No diary entries yet.</p>
    <% } %>

    <a href="/">Go back to Create Diary Entry</a>
</body>
</html>